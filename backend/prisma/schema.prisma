generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String
  firstname    String
  birthDate    DateTime
  cellphone    String?
  numOperation String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  answers      Answer[]
}

model Question {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  answers   Answer[]
}

model Answer {
  id           Int           @id @default(autoincrement())
  content      String
  author       Patient          @relation(fields: [authorId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  authorId     Int
  question     Question      @relation(fields: [questionId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  questionId   Int
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  simplifiedIA SimplifiedIA?
}

model SimplifiedIA {
  id         Int      @id @default(autoincrement())
  answer     Answer   @relation(fields: [answerId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  answerId   Int      @unique
  category   String
  confidence Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
